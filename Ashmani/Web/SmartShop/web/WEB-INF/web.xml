<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>SignIn</servlet-name>
        <servlet-class>com.smart.shop.admin.SignIn</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.smart.shop.user.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>com.smart.shop.user.Register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProduct</servlet-name>
        <servlet-class>com.smart.shop.admin.AddProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateProduct</servlet-name>
        <servlet-class>com.smart.shop.admin.UpdateProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveProduct</servlet-name>
        <servlet-class>com.smart.shop.admin.RemoveProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerifyTransaction</servlet-name>
        <servlet-class>com.smart.shop.admin.VerifyTransaction</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateWallet</servlet-name>
        <servlet-class>com.smart.shop.user.CreateWallet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BuyItems</servlet-name>
        <servlet-class>com.smart.shop.user.BuyItems</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadUserWallet</servlet-name>
        <servlet-class>com.smart.shop.user.LoadUserWallet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetTransactionDetails</servlet-name>
        <servlet-class>com.smart.shop.admin.GetTransactionDetails</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignIn</servlet-name>
        <url-pattern>/SignIn</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/UserLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/UserRegister</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddProduct</servlet-name>
        <url-pattern>/AddProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateProduct</servlet-name>
        <url-pattern>/UpdateProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveProduct</servlet-name>
        <url-pattern>/RemoveProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerifyTransaction</servlet-name>
        <url-pattern>/VerifyTransaction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateWallet</servlet-name>
        <url-pattern>/CreateWallet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuyItems</servlet-name>
        <url-pattern>/BuyItems</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadUserWallet</servlet-name>
        <url-pattern>/LoadUserWallet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetTransactionDetails</servlet-name>
        <url-pattern>/GetTransactionDetails</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
